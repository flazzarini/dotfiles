#!/bin/bash

# http://techblog.appnexus.com/2011/managing-ssh-sockets-in-gnu-screen/
# https://gist.github.com/martijnvermaat/8070533
# http://stackoverflow.com/questions/21378569/how-to-auto-update-ssh-agent-environment-variables-when-attaching-to-existing-tm

# Fix SSH auth socket location so agent forwarding works with screen.
#if test "$SSH_AUTH_SOCK" ; then
#    if test ! -e ~/.ssh/ssh_auth_sock; then
#        ln -sf $SSH_AUTH_SOCK ~/.ssh/ssh_auth_sock
#    fi
#fi


# Might fix the ``X11 connection uses different authentication protocol.``
# Based on reply from https://superuser.com/questions/492289/x11-connection-uses-different-authentication-protocol-when-using-ssh-x
if read proto cookie && [ -n "$DISPLAY" ]; then
    if [ `echo $DISPLAY | cut -c1-10` = 'localhost:' ]; then
        # X11UseLocalhost=yes
        echo add unix:`echo $DISPLAY | cut -c11-` $proto $cookie
    else
        # X11UseLocalhost=no
        echo add $DISPLAY $proto $cookie
    fi | xauth -q -
fi
